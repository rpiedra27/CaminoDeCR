@model ElCaminoDeCostaRica.Models.User
@{
    ViewBag.Title = "Confirmar registro";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ConfirmSignUp</title>
</head>
<body>
    @if (ViewBag.Success != null)
    {
        if (ViewBag.Success)
        {
            TempData.Remove("Code");
        }
        <div class="alert-success">
            <h3> @ViewBag.Message </h3>
        </div>
    }
    @using (Html.BeginForm("ConfirmSignUp", "Register", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.firstName)
        @Html.HiddenFor(model => model.lastName)
        @Html.HiddenFor(model => model.email)
        @Html.HiddenFor(model => model.phone)
        @Html.HiddenFor(model => model.password)

        <section class="min-vh-100 " style=" font-size:x-large;">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 4rem; border-style: solid; border-color: #FAD586;">
                            <div class="row g-0 mb-7">

                                <div class="col-md-6 col-lg-5 d-none d-md-block" ;>
                                    <img src="https://cdn-icons-png.flaticon.com/512/467/467129.png"
                                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; margin: 6px 10px" />
                                </div>

                                <div class="col-md-6 col-lg-7 d-flex align-items-center" style="font-size:x-large">
                                    <div class="card-body p-4 p-lg-5 text-black">


                                        <form>

                                            <h1 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: #184D47">Inserte su Código de Confimación</h1>
                                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: #184D47">Fué enviado a su correo electronico</h3>
                                            <div class="form-outline mb-4">
                                                <label class="form-label" for="form2Example27">Código de Confirmación : </label>
                                                <input type="text" id="code" name="code" class="inputCode form-control-lg" />

                                            </div>
                                            @if (TempData.Peek("Attemps") != null)
                                            {
                                                int remainAttemps = 4 - Convert.ToInt32(TempData.Peek("Attemps").ToString());
                                                <h4>
                                                    Intentos restantes: @remainAttemps
                                                </h4>
                                            }


                                            <div class="pt-1 mb-4">
                                                <input type="submit" name="submitButton" class="btnLogin" value="Confirmar" />
                                                <input type="submit" name="submitButton" class="btnLogin" value="Reenviar Código" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }





</body>
</html>
