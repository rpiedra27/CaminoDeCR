@model ElCaminoDeCostaRica.Models.Site
@{ ViewBag.Title = "Sitios"; }
<html>
<head>
</head>

<body class="container-fluid">
    <h1 align="center" style="color:#184D47; font-family: Agrozza Demo">Lista de Sitios</h1>
   
    <div class="seccion_1  text-center position-static row">

        @foreach (var site in ViewBag.sites)
        {
            var base64 = Convert.ToBase64String(site.img);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

            <div class="card justify-content-center col-lg-auto mx-auto mt-3" style="width: 18rem;">
               
                <div class="card-body d-flex flex-column" style="color:#184D47">
                    <h3 class="card-title">ID:@site.id           @site.name   </h3>

                    <img src="@imgSrc" class="card-img-top" alt="photo+@site.id" style="height:35vh; object-fit:cover;">
                    <p class="card-text">
                         <p>Descripcion : @site.description.</p>
                         <p>Su longitud : @site.longitude. </p>
                         <p>Latitud: @site.latitude. </p>
                         <p>Usuario : @site.idUser</p>
                          <p>Etapa :   @site.idStage </p>
                    </p>

                    <a>
                        @Html.ActionLink("Modificar", "siteEdit", new { identificador = site.id },
                             new { @class = "btnLogin alert-info mt-2", @onclick = "return confirm('¿Quiere modificar este sitio ? ');" })
                    </a>
                    <a>
                        @Html.ActionLink("Borrar", "siteDelete", new { identificador = site.id },
                             new { @class = "btnLogin  mt-2", @onclick = "return confirm('¿Quiere borrar este sitio? ');" })
                    </a>
                </div>
            </div>
        }
        </div>
    </body>
</html>
